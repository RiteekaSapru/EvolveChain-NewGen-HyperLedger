<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.newgen.evolvechain">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@drawable/app_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".uis.activities.StartActivity"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".uis.activities.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".uis.activities.CountrySelectionActivity"
            android:label="Select Country"
            android:parentActivityName=".uis.activities.SplashActivity" />
        <activity
            android:name=".uis.activities.SignInActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".uis.activities.GeneratePinActivity"
            android:label=" "
            android:parentActivityName=".uis.activities.SplashActivity" />
        <activity
            android:name=".uis.activities.OthersRegistrationActivity"
            android:label="North America"
            android:parentActivityName=".uis.activities.CountrySelectionActivity" />
        <activity
            android:name=".uis.activities.BasicDetailsActivity"
            android:label="Basic Details"
            android:parentActivityName=".uis.activities.OthersRegistrationActivity" />
        <activity
            android:name=".uis.activities.EmailActivity"
            android:label="Add Email"
            android:noHistory="true"
            android:parentActivityName=".uis.activities.BasicDetailsActivity" />
        <activity
            android:name=".uis.activities.OTPActivity"
            android:label="OTP Verification"
            android:noHistory="true" />
        <activity
            android:name=".uis.activities.PhoneActivity"
            android:label="Add Phone"
            android:noHistory="true"
            android:parentActivityName=".uis.activities.BasicDetailsActivity" />
        <activity
            android:name=".uis.activities.IdentityActivity"
            android:label="Identity Proof"
            android:parentActivityName=".uis.activities.OthersRegistrationActivity" />
        <activity
            android:name=".uis.activities.AddressActivity"
            android:label="Address Proof"
            android:parentActivityName=".uis.activities.OthersRegistrationActivity" />
        <activity
            android:name=".uis.activities.BankDetailActivity"
            android:label="Bank Details"
            android:parentActivityName=".uis.activities.OthersRegistrationActivity" />
        <activity
            android:name=".uis.activities.BasicDetailActivity"
            android:label="Basic Details"
            android:parentActivityName=".uis.activities.OthersRegistrationActivity" />
        <activity android:name=".uis.activities.GeneratePinStep2Activity" />
        <activity
            android:name=".uis.activities.SummaryActivity"
            android:label="Summary "
            android:noHistory="true"
            android:parentActivityName=".uis.activities.OthersRegistrationActivity" />
        <activity
            android:name=".uis.activities.UserProfileActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".uis.activities.SettingActivity"
            android:label="Settings"
            android:parentActivityName=".uis.activities.UserProfileActivity"/>
    </application>

</manifest>