<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Space contains text -->
    <item android:state_focused="true" android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#0F75BD"/>
            <stroke android:color="#000"
                android:width="2dp"/>
        </shape>
    </item>
    <!--Space is the next space for character input -->
    <item android:state_focused="true" android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#0F75BD"/>
            <stroke android:color="#333"
                android:width="2dp"/>
        </shape>
    </item>
    <!-- PinEntryEditText is focused -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#90a4ae"/>
            <stroke android:color="#666"
                android:width="2dp"/>
        </shape>
    </item>
    <!-- PinEntryEditText is not focused -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#90a4ae"/>
            <stroke android:color="#eee"
                android:width="2dp"/>
        </shape>
    </item>
</selector>